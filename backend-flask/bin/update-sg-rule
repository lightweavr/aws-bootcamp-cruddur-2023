#! /usr/bin/bash

if [ -z "${DB_SG_ID}" ] || [ -z "${DB_SG_RULE_ID}" ] ; then
    echo Need both DB_SG_ID and DB_SG_RULE_ID to be set, exiting.
    exit 1
fi
IP=$(curl -s ifconfig.me)

aws --query "Return" ec2 modify-security-group-rules \
    --group-id $DB_SG_ID \
    --security-group-rules "SecurityGroupRuleId=$DB_SG_RULE_ID,SecurityGroupRule={IpProtocol=tcp,FromPort=5432,ToPort=5432,CidrIpv4=$IP/32}"
