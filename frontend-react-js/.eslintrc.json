{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "react",
        "react-hooks",
        "jsx-a11y",
        "flowtype",
        "import",
        "testing-library",
        "jest"
    ],
    "extends": [
        "prettier",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "prettier/prettier": "error",
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "no-unused-vars": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
